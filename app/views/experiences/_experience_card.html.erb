<div class="column">
	<%= link_to source do %>
		<article class="source-card ui segment" style="position: relative;">
			<div class="image-meta-container">
				<div class="ui top left attached label purple" title="Rating" style="border-radius:0; z-index:999;">
					<i class="heart icon"></i>978<%#= source.rating %>
				</div>
				<%= image_tag(source.avatar.url, class: "thumbnail") %>
			</div>

			<div class="content-container">
				
				<h3 class="title ui header"><%= source.title %></h3>
				<h4 class="description"><%= truncate source.description, length: 83 %></h4>

				<div class="tags-container">
					<div class="label-group mood ui small labels">
						<% source.emotions.each do |emotion| %>
							<%= render "emotions/label", emotion: emotion %>
						<% end %>
					</div>
					<div class="label-group tags ui tiny labels">
						<% source.categories.each do |category| %>
							<%= render "categories/label", category: category %>
						<% end %>
					</div>

					<% if source.user %>
						<div class="user-tag"> 
							<%= link_to source.user.username, users_path(source.user) %> -
							<%= time_ago source.created_at %>
							<span class="price">
								<%= price_to_description source.price %>
							</span>
						</div>
					<% end %>

				</div>
			</div>
			
		</article>
	<% end %>
</div>